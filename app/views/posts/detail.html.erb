<div class="main posts-detail">
  <div class="container list-container">
    <% if @future_posts.count > 0 %>
      <%= link_to("#"+ @genre_title, "/posts/#{@genre_id}/index", {class: "hashtag"}) %>
      <div class="row">
        <div class="col s12">
        <% @future_posts.each do |post| %>
        <a href="<%= "/posts/#{post.id}" %>">
          <section class="card card-clickable">
            <% if post.genre_id == 1 %>
              <img class="card-img" src="/genre_images/skunk.png">
            <% elsif post.genre_id == 2 %> 
              <img class="card-img" src="/genre_images/english.jpg">
            <% elsif post.genre_id == 3 %> 
              <img class="card-img" src="/genre_images/party.jpg">
            <% else %>
              <img class="card-img" src="/genre_images/others.png">
            <% end %>
            <div class="card-container">
              <div class="card-text card-text-head">
                <%= post.title %>
              </div>
              <div class="card-date">
                <p>開催日時</p>
                <%= post.date %> 
                <% if post.time_from %>
                  <%= post.time_from.strftime('%H:%M') %>
                  〜 <%= post.time_to.strftime('%H:%M') %>
                <% end %>
              </div>
            </div>
          </section>
        </a>
        <% end %>
        </div>
      </div>
    <% end %>


  </div>
</div>