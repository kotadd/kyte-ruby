<div class="main posts-index">
  <div class="container">
    <% if @posts_skunk.count > 0 %>
      <div class="hashtag">#SkunkWork</div>
      <div id="cards-skunk" class="card-flex">
        <% @posts_skunk.each do |post| %>
        <a href="<%= "/posts/#{post.id}" %>">
          <section class="card card-clickable">
            <img class="card-img" src="/genre_images/skunk.png">
            <div class="card-container">
              <div class="card-text card-text-head">
                <%= post.title %>
              </div>
              <div class="card-date">
                開催日
                <%= post.date %>
              </div>
            </div>
          </section>
        </a>
        <% end %>
      </div>
    <% end %>
