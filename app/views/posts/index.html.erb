<div class="main posts-index">
  <div class="container list-container">
    <% @posts.each do |posts| %>
    <% if posts.count > 0 %>
      <% if @first_post %>
        <%= link_to("#開催日時の近い順", "/posts/0/index", {class: "hashtag"}) %>
      <% else %>
        <%= link_to("#"+ posts[0].genre.title, "/posts/#{posts[0].genre_id}/index", {class: "hashtag"}) %>
      <% end %>
      <div class="row">
        <div class="col s12">
          <% if @first_post %>
            <div id="cards-0" class="card-flex">
          <% @first_post = false %>
          <% else %>
            <div id="cards-<%= posts[0].genre_id %>" class="card-flex">
          <% end %>
            <% posts.each do |post| %>
            <a href="<%= "/posts/#{post.id}" %>">
              <section class="card card-clickable">
                <% if post.genre_id == 1 %>
                  <img class="card-img" src="/genre_images/skunk.png">
                <% elsif post.genre_id == 2 %> 
                  <img class="card-img" src="/genre_images/english.jpg">
                <% elsif post.genre_id == 3 %> 
                  <img class="card-img" src="/genre_images/party.jpg">
                <% else %>
                  <img class="card-img" src="/genre_images/others.png">
                <% end %>
                <div class="card-container">
                  <div class="card-text card-text-head">
                    <%= post.title %>
                  </div>
                  <div class="card-date">
                    <p>開催日時</p>
                    <%= post.date %> 
                    <% if post.time_from %>
                      <%= post.time_from.strftime('%H:%M') %>
                      〜 <%= post.time_to.strftime('%H:%M') %>
                    <% end %>
                  </div>
                </div>
              </section>
            </a>
            <% end %>
          </div>
        </div>
      </div>
      <% end %>
    <% end %>

  </div>
</div>