<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<div class="main user-new cyan">
  <div class="container">
    <div id="create-account-page" class="row">
    <div class="col s12 z-depth-4 card-panel">
      <div class="form-body">
        <div class="row">
          <div class="input-field col s12 center">
            <img src="/logo.png" alt="" class="">
          </div>
        </div>
        <% @user.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>

        <div class="row margin">
          <div class="input-field col s12">
            <i class="fa fa-user prefix" aria-hidden="true"></i>
            <%= f.text_field :username, autofocus: true, autocomplete: "username" %>
            <label for="username" class="active">ユーザー名<span class="required">*</span></label>
          </div>
        </div>
        <div class="row margin">
          <div class="input-field col s12">
            <i class="fa fa-envelope prefix" aria-hidden="true"></i>
            <%= f.email_field :email, autocomplete: "email" %>
            <label for="email_account" class="active">メールアドレス<span class="required">*</span></label>
          </div>
        </div>
       <div class="row margin">
          <div class="input-field col s12">
            <i class="fa fa-lock prefix" aria-hidden="true"></i>
            <%= f.password_field :password, autocomplete: "off" %>
            <label for="password_account" class="active">パスワード(8文字以上)<span class="required">*</span></label>
          </div>
        </div>
       <div class="row margin">
          <div class="input-field col s12">
            <i class="fa fa-lock prefix" aria-hidden="true"></i>
            <%= f.password_field :password_confirmation, autocomplete: "off" %>
            <label for="password_confirmation_account" class="active">パスワードの確認<span class="required">*</span></label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <div class="actions">
              <% @user.image_name = "default_user.jpg" %>
              <%= f.hidden_field :image_name %>
              <%= f.submit "アカウント作成", class: 'waves-effect waves-light btn pull-right' %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <%= link_to("Kyteのアカウントをお持ちですか？", "/login") %>
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
  </div>
</div>
<% end %>



