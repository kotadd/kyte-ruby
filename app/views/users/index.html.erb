<div class="main users-index">
  <div class="container">
    <!-- <h1 class="users-heading">ユーザー一覧</h1> -->
    <div class="row">
      <div class="col s12">
        <div class="users-index-item">
          <div class="col s9">
            <div class="user-right">
              <div class="user-first-column white-text">photo</div>
              <div class="user-second-column">ユーザー名称</div>
            </div>
          </div>
          <div class="col s3">
            <div class="user-right">
              <div>作成日時</div>
            </div>
          </div>
        </div>
      </div>
      <div class="col s12">  
        <% @users.each do |user| %>
          <a href="<%="/users/#{user.id}"%>" >
            <div class="users-index-item">
              <div class="col s9">
                <div class="user-left">
                  <div class="user-first-column">
                    <% if !user.avatar.blank? %>
                      <img src="<%= user.avatar %>">
                    <% else %>
                      <img src="<%= "/user_images/default_user.jpg" %>">
                    <% end %>
                  </div>
                </div>
                <div class="user-right user-right-height">
                  <div class="user-list-name user-second-column"><%= user.name %></div>
                </div>
              </div>
              <div class="col s3 user-created-date">
                <div class="user-right user-right-height">
                  <div><%= user.created_at.strftime("%Y年%m月%d日") %>に更新</div>
                </div>
              </div>
            </div>
          </a>
        <% end %>
      </div>

    </div>
  </div>
</div>