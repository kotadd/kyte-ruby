<div class="main user-new cyan">
  <div class="container">
    <div id="create-account-page" class="row">
    <div class="col s12 z-depth-4 card-panel">
      <div class="form-body">
        <div class="row">
          <div class="input-field col s12 center">
            <img src="/logo.png" alt="" class="">
          </div>
        </div>
        <% @user.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>
        <% if @error_message %>
          <div class="form-error">
            <%= @error_message %>
          </div>
        <% end %>


        <%= form_tag("/users/reset_password") do %>
       <div class="row margin">
          <div class="input-field col s12">
            <i class="fa fa-lock prefix" aria-hidden="true"></i>
            <input id="password_account" name="password" type="password" class="validate" value="">
            <label for="password_account" class="active">新しいパスワード<span class="required">*</span></label>
          </div>
        </div>
       <div class="row margin">
          <div class="input-field col s12">
            <i class="fa fa-lock prefix" aria-hidden="true"></i>
            <input id="password_confirmation_account" name="password_confirmation" type="password" class="validate" value="">
            <label for="password_confirmation_account" class="active">新しいパスワードの確認<span class="required">*</span></label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
          <button class="waves-effect waves-light btn pull-right" type="submit">変更</button>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
  </div>
</div>
