<div class="main user-show">
  <div class="container">
    <div class="row">
      <div class="col s2">
          <div class="card card-prof">
            <div class="card-container card-prof-container">
              <div class="user">
                <img src="<%= "/user_images/#{@user.image_name}" %>">
                <h2><%= @user.name %></h2>
                <% if @user.id == @current_user.id %>
                  <%= link_to("編集", "/users/#{@user.id}/edit", {class: "btn-empty"}) %>
                <% end %>
              </div>
            </div>
          </div>
      </div>
      
      <div class="col s10">
      <ul class="user-tabs">
        <li><%= link_to("マイポスト", "/users/#{@user.id}") %></li>
        <li class="active"><%= link_to("参加予定", "/users/#{@user.id}/joins") %></li>
        <li><%= link_to("いいね", "/users/#{@user.id}/likes") %></li>
      </ul>
      
      <% @joins.each do |join| %>
        <% post = Post.find_by(id: join.post_id) %>
        
        <div class="posts-index-item">
          <div class="post-left">
            <img src="<%= "/user_images/#{post.user.image_name}" %>">
          </div>
          <div class="post-right">
            <div class="post-user-name">
              <%= link_to(post.user.name, "/users/#{post.user.id}") %>
            </div>
            <%= link_to(post.title, "/posts/#{post.id}") %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
