    <script>
    // card枚数が5枚を超えたら横スクロールする
    $(document).ready(function() {
      if ($('#cards-skunk a').length > 5) {
        $('#cards-skunk').mousewheel(function(e, delta) {
            this.scrollLeft -= (delta * 1);
            e.preventDefault();
        });       
      }
      if ($('#cards-english a').length > 5) {
        $('#cards-english').mousewheel(function(e, delta) {
            this.scrollLeft -= (delta * 1);
            e.preventDefault();
        });        
      }
      if ($('#cards-party a').length > 5) {
        $('#cards-party').mousewheel(function(e, delta) {
            this.scrollLeft -= (delta * 1);
            e.preventDefault();
        });        
      }
      if ($('#cards-others a').length > 5) {
        $('#cards-others').mousewheel(function(e, delta) {
            this.scrollLeft -= (delta * 1);
            e.preventDefault();
        });        
      }

    });
    </script>
    <script>
      // ヘッダーのドロップダウンメニューをいい感じの配置にする
      $(".dropdown-button").dropdown({ hover: true, constrainWidth: false, belowOrigin: true });

      // flashがずっと出ているのがうざいので、2秒で消す
      $('document').ready(function() {
        setTimeout(function() {
          $('.flash').slideUp();
        }, 2000);
      });
    </script>

    <script>
    // 選択ボックスの有効化
    $(document).ready(function() {
      $('select').material_select();
    });

    // datepickerの有効化
  $('.datepicker').pickadate({
    selectMonths: true, // Creates a dropdown to control month
    selectYears: 15, // Creates a dropdown of 15 years to control year,
    today: 'Today',
    clear: 'Clear',
    close: 'OK',
    closeOnSelect: false // Close upon selecting a date,
  });

  // timepickerの有効化
  $('.timepicker').pickatime({
    default: 'now', // Set default time: 'now', '1:30AM', '16:30'
    fromnow: 0,       // set default time to * milliseconds from now (using with default = 'now')
    twelvehour: false, // Use AM/PM or 24-hour format
    donetext: 'OK', // text for done-button
    cleartext: '消去', // text for clear-button
    canceltext: '閉じる', // Text for cancel-button
    autoclose: false, // automatic close timepicker
    ampmclickable: true, // make AM PM clickable
    aftershow: function(){} //Function for after opening timepicker
  });

  // 文字数カウント
  $(document).ready(function() {
    $('input#title, textarea#detail-content').characterCounter();
  });

    </script>

