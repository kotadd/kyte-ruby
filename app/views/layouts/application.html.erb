                </li>

              <% else %>
                <li>
                  <%= link_to("Kyteとは", "/about") %>
                </li>
                <li>
                  <%= link_to("アカウントを作る", "/signup") %>
                </li>
                <li>
                  <%= link_to("ログインする", "/login") %>
                </li>
              <% end %>
            </ul>
            <ul class="side-nav" id="mobile-demo">
              <% if @current_user %>
                <li>
                  <%= link_to(@current_user.name, "/users/#{@current_user.id}") %>
                </li>
                <li>
                  <%= link_to("イベントを作る", "/posts/new") %>
                </li>
                <li>
                  <%= link_to("イベントを探す", "/posts/index") %>
                </li>
                <% if @current_user.name == 'admin' %>
                  <li>
                    <%= link_to("ユーザー一覧", "/users/index") %>
                  </li>
                <% end %>
                <li>
                  <%= link_to("ログアウト", "/logout", {method: :post}) %>
                </li>
              <% else %>
                <li>
                  <%= link_to("Kyteとは", "/about") %>
                </li>
                <li>
                  <%= link_to("アカウントを作る", "/signup") %>
                </li>
                <li>
                  <%= link_to("ログインする", "/login") %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>

      <% if session[:user_id] %>
        <div class="fixed-action-btn">
          <a class="tooltipped btn-floating btn-large red" data-position="top" data-tooltip="イベントを作る" href="<%= "/posts/new" %>">
            <i class="large material-icons">add</i>
          </a>
        </div>
      <% end %>

      <% if flash[:notice] %>
        <div class="flash">
          <%= flash[:notice] %>
        </div>
      <% end %>

    <main>
        <%= yield %>    
    </main>


