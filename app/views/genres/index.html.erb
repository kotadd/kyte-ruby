<div class="main users-index">
  <div class="container">
    <!-- <h1 class="users-heading">ジャンル一覧</h1> -->
    <div class="row">
      <div class="col s12">
        <div class="genres-index-item">
          <div class="col s9">
            <div class="genre-right">
              <div class="genre-first-column">id</div>
              <div class="genre-second-column">タイトル</div>
            </div>
          </div>
          <div class="col s3">
            <div class="genre-right">
              <div>更新日時</div>
            </div>
          </div>
        </div>
      </div>
      <div class="col s12">  
        <% @genre.each do |genre| %>
          <a href="<%=" /genres/#{genre.id}/edit "%>" >
            <div class="genres-index-item">
              <div class="col s9">
                <div class="genre-right">
                  <div class="genre-first-column"><%= genre.id %></div>
                  <div class="genre-second-column"><%= genre.title %></div>
                </div>
              </div>
              <div class="col s3 genre-created-date">
                <div class="genre-right">
                  <div><%= genre.updated_at.strftime("%Y年%m月%d日") %>に更新</div>
                </div>
              </div>
            </div>
          </a>
        <% end %>
      </div>
    </div>

  </div>
</div>